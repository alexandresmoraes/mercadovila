{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "Auth.API"
    }
  },
  "HealthChecks-UI": {
    "DisableMigrations": true,
    "HealthChecks": [
      {
        "Name": "api",
        "Uri": "/healthz"
      }
    ]
  },
  "ConnectionStrings": {
    "Default": "User ID=postgres;Password=s3nh4;Host=localhost;Port=5432;Database=AUTH;"
  },
  "AuthSettings": {
    "SecretKey": "ebdbf37f27f74e57b68b804ddfa34e669743a97a64c8431f9dd0dcd72b68e15d",
    "Issuer": "sesmoweb.com.br",
    "Audience": "auth.sesmoweb.com.br",
    "ExpiresIn": 3600,
    "RefreshTokenExpiration": 7
  },
  "EventBusSettings": {
    "BootstrapServer": "localhost:9092",
    "Topic": "default",
    "Group": "group-default"
  }
}
